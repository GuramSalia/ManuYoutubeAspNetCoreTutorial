@model Menu2.Models.Dish
@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="d-flex justify-content-center">
        <h3>@Model.Name</h3>
    </div>
    <div class="d-flex justify-content-center">
        <img src="@Model.ImageURL" style="width: 50%"/>
    </div>
    <div class="d-flex justify-content-center">
        Price: @Model.Price.ToString("N2") Dollars
    </div>
    <div class="d-flex justify-content-center">
        Ingredients:
        <br />
          @foreach(var item in Model.DishIngredients)
          {
              <p>@item.Ingredient.Name</p>
              <br />
          }
    </div>
    <div class="d-flex justify-content-center">test111</div>
    <br />
    <a class="btn btn-info" asp-action="Index">back to manu</a>
</div>

